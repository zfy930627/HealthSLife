<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
	<com.baidu.mapapi.map.MapView  
	    android:id="@+id/location_result_bmapView"  
	    android:layout_width="fill_parent"  
	    android:layout_height="fill_parent"  
	    android:clickable="true" />
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:alpha="0.8" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:orientation="horizontal" >
		    <TextView 
		        android:id="@+id/location_result_duration"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:layout_gravity="center_horizontal"
		        android:textSize="45sp"
		        android:text="00:00:00" />
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:gravity="center"
		        android:layout_weight="2"
				android:orientation="vertical" >
		   		<TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:layout_gravity="center_horizontal"
					android:textSize="18sp"
			        android:text="路程" />
		   		<TextView
			        android:id="@+id/location_result_distance"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:layout_gravity="center_horizontal"
					android:textSize="20sp"
			        android:text="8.55" />
	   		</LinearLayout>
		</LinearLayout>	    
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
			android:orientation="horizontal" >
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
				android:orientation="vertical" >
		    	<TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:layout_gravity="center_horizontal"
					android:textSize="18sp"
			        android:text="步数" />
		    	<TextView
			        android:id="@+id/location_result_pace"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:layout_gravity="center_horizontal"
					android:textSize="20sp"
			        android:text="1222" />
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
				android:orientation="vertical" >
		    	<TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:layout_gravity="center_horizontal"
					android:textSize="18sp"
			        android:text="卡路里" />
		    	<TextView
			        android:id="@+id/location_result_heat"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:layout_gravity="center_horizontal"
					android:textSize="20sp"
			        android:text="2890" />
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
				android:orientation="vertical" >
		    	<TextView
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
			        android:gravity="center"
			        android:layout_gravity="center_horizontal"
		    	    android:textSize="18sp"
		    	    android:text="速度" />
		    	<TextView
		    	    android:id="@+id/location_result_speed"
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
			        android:gravity="center"
			        android:layout_gravity="center_horizontal"
		    	    android:textSize="20sp"
		    	    android:text="7.5" />
		    </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
	
	<Button
        android:id="@+id/location_result_savebtn"
        android:layout_height="58dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="#3498db"
        android:text="保存结果" />
</RelativeLayout>
